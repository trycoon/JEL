<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>stack</id>
    <formats>
        <format>zip</format>
    </formats>

    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>${project.artifactId}-${project.version}</baseDirectory>

    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>/lib/</outputDirectory>
            <excludes>
                <exclude>junit:junit</exclude>
                <exclude>org.mvel:mvel2</exclude>
                <exclude>log4j:log4j</exclude>
                <exclude>org.slf4j:slf4j-api</exclude>
                <exclude>org.hamcrest:hamcrest-core</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>/conf/</outputDirectory>
            <includes>
                <include>io.vertx:vertx-hazelcast</include>
            </includes>
            <unpack>true</unpack>
            <unpackOptions>
                <includes>
                    <include>default-cluster.xml</include>
                </includes>
            </unpackOptions>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <!-- Directories to include -->
        <fileSet>
            <directory>${project.basedir}/jel-client/dist</directory>
            <outputDirectory>./web</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <!-- Single files to include -->
        <!--<file>
            <outputDirectory>/client</outputDirectory>
            <destName>vertxbus-${project.version}.js</destName>
            <source>src/main/client/vertxbus.js</source>
        </file>-->
    </files>

</assembly>